<body>
  <h2>ðŸ§¾ Ticket de Pedido</h2>
  <div id="contenido"></div>
  <button onclick="window.print()">Imprimir</button>

  <script>
  window.addEventListener("message", (e) => {
    const datos = e.data.pedidos;
    const cont = document.getElementById("contenido");
    let total = 0;
    datos.forEach(p => {
      total += p.precio;
      const div = document.createElement("div");
      div.className = "item";
      div.innerHTML = `
        <div><strong>${p.producto}</strong> - ${p.tipo} ${p.tamano}</div>
        ${p.sabor ? `<div>Sabor: ${p.sabor}</div>` : ""}
        ${p.ingredientes ? `<div>${p.ingredientes}</div>` : ""}
        ${p.combo === "SÃ­" ? `<div>Combo incluido</div>` : ""}
        ${p.quesoExtra === "SÃ­" ? `<div>+ Queso extra</div>` : ""}
        ${p.ingredienteExtra ? `<div>+ Extra: ${p.ingredienteExtra}</div>` : ""}
        <div>ðŸ’µ $${p.precio}</div>
      `;
      cont.appendChild(div);
    });
    const t = document.createElement("div");
    t.className = "total";
    t.textContent = `TOTAL: $${total}`;
    cont.appendChild(t);

    // Espera breve y lanza impresiÃ³n
    setTimeout(() => window.print(), 500);
  });
</script>
</body>
